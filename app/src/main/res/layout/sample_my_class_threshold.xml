<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        android:id="@+id/lecture1"
        layout="@layout/item_lecture" />

    <include
        android:id="@+id/lecture2"
        layout="@layout/item_lecture" />

    <include
        android:id="@+id/lecture3"
        layout="@layout/item_lecture" />

    <include
        android:id="@+id/lecture4"
        layout="@layout/item_lecture" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/attend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_lecture_attend"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_my_class_threshold1"
            app:layout_constraintBottom_toBottomOf="@+id/attend_icon"
            app:layout_constraintStart_toEndOf="@+id/attend_icon"
            app:layout_constraintTop_toTopOf="@+id/attend_icon" />

        <ImageView
            android:id="@+id/similar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/attend"
            app:layout_constraintStart_toEndOf="@+id/attend"
            app:layout_constraintTop_toTopOf="@+id/attend"
            app:srcCompat="@drawable/ic_lecture_attend_similar"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/text_my_class_threshold2"
            app:layout_constraintBottom_toBottomOf="@+id/similar_icon"
            app:layout_constraintStart_toEndOf="@+id/similar_icon"
            app:layout_constraintTop_toTopOf="@+id/similar_icon" />

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_my_class_threshold3"
            app:layout_constraintStart_toStartOf="@+id/attend_icon"
            app:layout_constraintTop_toBottomOf="@+id/attend_icon" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>