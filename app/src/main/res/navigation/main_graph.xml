<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboard_fragment">

    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="jp.kentan.studentportalplus.ui.dashboard.DashboardFragment"
        android:label="@string/dashboard_title"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/timetable_fragment"
        android:name="jp.kentan.studentportalplus.ui.timetable.TimetableFragment"
        android:label="@string/timetable_title"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/lecture_informations_fragment"
        android:name="jp.kentan.studentportalplus.ui.lectures.information.LectureInformationsFragment"
        android:label="@string/lecture_informations_title"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/lecture_cancellations_fragment"
        android:name="jp.kentan.studentportalplus.ui.lectures.cancellation.LectureCancellationsFragment"
        android:label="@string/lecture_cancellations_title"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/notices_fragment"
        android:name="jp.kentan.studentportalplus.ui.notices.NoticesFragment"
        android:label="@string/notices_title"
        tools:layout="@layout/fragment_list" />

    <customTabs
        android:id="@+id/campus_map_custom_tabs"
        app:url="@string/main_campus_map_url" />

    <customTabs
        android:id="@+id/room_map_custom_tabs"
        app:url="@string/main_room_map_url" />

    <activity
        android:id="@+id/settings_activity"
        android:name="jp.kentan.studentportalplus.ui.settings.SettingsActivity" />
</navigation>
